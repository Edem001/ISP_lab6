@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Книжковий магазин</title>
</head>
<body>
    <div>
        <h3>Распродажа книг</h3>
        <table>
            <tr>
                <td><p>Назва книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Ціна</p></td>
                <td></td>
            </tr>
            @foreach (var b in ViewBag.Institutes)
            {
                <tr>
                    <td><p>@b.ID</p></td>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Location</p></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>